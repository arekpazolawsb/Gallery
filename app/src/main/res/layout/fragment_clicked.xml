<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout android:layout_height="match_parent" android:layout_width="match_parent">
        <!-- Opis zdjęcia -->
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="156dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="157dp"
                android:textAlignment="center" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                android:textSize="24sp"/>
        <!-- rating zdjęcia -->
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:id="@+id/ratingBar"
                android:layout_marginTop="16dp"
                android:numStars="5" android:stepSize="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@android:style/Widget.Holo.Light.RatingBar"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>