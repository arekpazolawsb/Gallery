<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <!-- Rating -->
    <RatingBar
            android:id="@+id/smallRatingBar"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:numStars="5" android:stepSize="1" android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Small"/>
    <!-- ZdjÄ™cie -->
    <ImageView
            android:id="@+id/img"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:cropToPadding="false" android:scaleType="fitCenter"
    />
</LinearLayout>
